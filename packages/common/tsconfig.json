{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": [],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
