{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": [],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@types": ["src/@types/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
